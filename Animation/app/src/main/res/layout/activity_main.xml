<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_fadein"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="FADE IN"
        app:layout_constraintBottom_toTopOf="@+id/button_fadeout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_fadeout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="FADE OUT"
        app:layout_constraintBottom_toTopOf="@+id/button_blink"
        app:layout_constraintTop_toBottomOf="@+id/button_fadein"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_blink"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BLINK"
        app:layout_constraintBottom_toTopOf="@+id/button_zoomin"
        app:layout_constraintTop_toBottomOf="@+id/button_fadeout"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_zoomin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ZOOM IN"
        app:layout_constraintBottom_toTopOf="@+id/button_zoomout"
        app:layout_constraintTop_toBottomOf="@+id/button_blink"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_zoomout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ZOOM OUT"
        app:layout_constraintBottom_toTopOf="@+id/button_rotate"
        app:layout_constraintTop_toBottomOf="@+id/button_zoomin"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_rotate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ROTATE"
        app:layout_constraintBottom_toTopOf="@+id/button_move"
        app:layout_constraintTop_toBottomOf="@+id/button_zoomout"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_move"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="MOVE"
        app:layout_constraintBottom_toTopOf="@+id/button_slideup"
        app:layout_constraintTop_toBottomOf="@+id/button_rotate"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_slideup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SLIDE UP"
        app:layout_constraintBottom_toTopOf="@+id/button_slidedown"
        app:layout_constraintTop_toBottomOf="@+id/button_move"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_slidedown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SLIDE DOWN"
        app:layout_constraintBottom_toTopOf="@+id/button_bounce"
        app:layout_constraintTop_toBottomOf="@+id/button_slideup"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/button_bounce"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BOUNCE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_slidedown"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/text_fadein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_fadein"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/text_fadeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_fadeout"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/text_blink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_blink"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/text_zoomin"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_zoomin"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/text_zoomout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_zoomout"
        tools:layout_editor_absoluteY="223dp" />

    <TextView
        android:id="@+id/text_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_rotate"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/text_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_move"
        tools:layout_editor_absoluteY="323dp" />

    <TextView
        android:id="@+id/text_slide_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_slideup"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/text_slide_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_slidedown"
        tools:layout_editor_absoluteY="423dp" />

    <TextView
        android:id="@+id/text_bounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button_bounce"
        tools:layout_editor_absoluteY="476dp" />
</android.support.constraint.ConstraintLayout>